<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.Admin_profileActivity">

    <LinearLayout
        android:id="@+id/admin_manageexpert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/sky"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/admin_expertimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/bookexpert" />

        <TextView
            android:id="@+id/adminmanageexpert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:text="Manage Expert"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/admin_managecustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/sky"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/admin_customerimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/userdetails" />

        <TextView
            android:id="@+id/adminmanagecustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:text="Manage Customer"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/admin_managefeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/sky"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/admin_feedbackimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/feedback" />

        <TextView
            android:id="@+id/adminmanagefeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:text="Manage Feedback"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/admin_managepayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/sky"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/admin_paymentimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/payment" />

        <TextView
            android:id="@+id/adminmanagepayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:text="Manage Payment"
            android:textSize="20dp" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/admin_managecomplaints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/sky"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/admin_complaintsimg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:src="@drawable/complaints" />

            <TextView
                android:id="@+id/adminmanagecomplaints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:text="Manage Complaints"
                android:textSize="20dp" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/admin_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/sky"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/admin_detailimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/admindetail" />

        <TextView
            android:id="@+id/admindetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:text="Admin Details"
            android:textSize="20dp" />


    </LinearLayout>

</LinearLayout>