<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.User_profileActivity">

    <LinearLayout
        android:id="@+id/userquery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/sky"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_queimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/query" />

        <TextView
            android:id="@+id/user_que"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:text="Post Queries"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/userreply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/sky"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_repimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/reply" />

        <TextView
            android:id="@+id/user_rep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:text="Check Reply"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/usermeeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/sky"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_meetimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/meeting" />

        <TextView
            android:id="@+id/user_meet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:text="Request Meetings"
            android:textSize="20dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/userpayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/sky"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_payimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/payment" />

        <TextView
            android:id="@+id/user_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:text="Payment"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_bookexpert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/sky"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_bookexpertimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/bookexpert" />

        <TextView
            android:id="@+id/userbookexpert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:text="Book Expert"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/userdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/sky"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_detailimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/userdetails" />

        <TextView
            android:id="@+id/user_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:text="User Details"
            android:textSize="20dp" />
    </LinearLayout>




</LinearLayout>