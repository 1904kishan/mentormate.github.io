<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.Expert_profileActivity">

    <LinearLayout
        android:id="@+id/expert_manageskill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/sky"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/expert_skillimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/skills" />

        <TextView
            android:id="@+id/expertmanageskill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:text="Manage Skills"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/expert_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/sky"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/expert_replyimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/reply" />

        <TextView
            android:id="@+id/expertreply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:text="Reply to Customer"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/expert_viewrequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/sky"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/expert_requestimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/viewrequest" />

        <TextView
            android:id="@+id/expert_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:text="Manage Request"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/expert_viewqueries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/sky"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/expert_queryimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/query" />

        <TextView
            android:id="@+id/expert_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:text="View Queries"
            android:textSize="20dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/expert_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/sky"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/expert_detailimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/bookexpert" />

        <TextView
            android:id="@+id/expertdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:text="Expert Details"
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>