<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<TextView
    android:id="@+id/projectrequest_custom_name"
    android:textColor="#000000"
    android:textStyle="bold"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/projectrequest_custom_date"
        android:textColor="#000000"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/projectrequest_custom_sub"
        android:textColor="#000000"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/projectrequest_custom_status"
        android:textColor="#000000"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/custom_projectrequest_accept_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:text="Accept"
            android:id="@+id/projectrequest_custom_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_toRightOf="@id/projectrequest_custom_accept"
            android:text="cancel"
            android:layout_margin="10dp"
            android:id="@+id/projectrequest_custom_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>