<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#F80303"
        android:layout_margin="5dp"
        android:id="@+id/custom_membership_packages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_margin="5dp"
        android:id="@+id/custom_membership_valid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_margin="5dp"
        android:id="@+id/custom_membership_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:id="@+id/custom_membership_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:textColor="#070707"
        android:background="@drawable/custom_button"
        android:layout_margin="5dp"
        android:text="Purchase"
        android:id="@+id/cutom_membership_purchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>